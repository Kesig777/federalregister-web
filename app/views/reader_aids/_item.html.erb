<li>
  <h5><%= link_to item.formatted_title, item.path(presenter.section_identifier) %></h5>
  <%= item.formatted_excerpt %>
  <% if presenter.show_authorship? %>
    <span class="byline">
      <span class="authorship">
        <%= item.author.name %> - <%= link_to item.modified, item.path(presenter.section_identifier) %>
      </span>
    </span>
  <% end %>
</li>
