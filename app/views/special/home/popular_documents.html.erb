<div id="popular-documents" class="section with-icon-header">
  <h4 class="with-icon">
    <span class="icon-fr2 icon-fr2-Temperature"></span>
    Popular Documents
  </h4>

  <% unless @popular_documents.present? %>
    <p>Popular documents are not available at this time.</p>
  <% end %>

  <% @popular_documents.each do |popular_document| %>
    <ul class="fr-list with-stats popular-documents">
      <li>
        <%= document_type_icon popular_document.document_type %>
        <%= link_to popular_document.title, popular_document.html_url, class: "popular-document-title" %>
      </li>
    </ul>
  <% end %>
</div>
