<div class="row home-aid-box">
  <div class="col-xs-12 col-md-12">
    <%= fr_box 'Reader Aids', :reader_aid, content_block_html: {class: 'simple'} do %>
      <div class="row">
        <div class="col-xs-8 col-md-8">
          <p>
            Increase your understanding of the Federal Register eco-system and
            improve your FederalRegister.gov skills with these helpful, unofficial
            educational articles and videos. See more of our reader aids
            <%= link_to "here", reader_aids_path %>.
          </p>
        </div>

        <div class="col-xs-4 col-md-4 section">
          <p class="blog">
            <span class="icon-fr2 icon-fr2-quote"></span>
            Read the <%= link_to 'Office of the Federal Register Blog', reader_aids_section_path("office-of-the-federal-register-blog") %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-8 col-md-8 section">
          <%= render partial: 'reader_aids/homepage_section', layout: false, locals: {presenter: @presenter_for_using_fr} %>
        </div>
        <div class="col-xs-4 col-md-4 section">
          <%= render partial: 'reader_aids/homepage_section', layout: false, locals: {presenter: @presenter_for_recent_updates} %>
        </div>
      </div>

    <% end %>
  </div>
</div>
