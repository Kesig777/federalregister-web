<!-- issue document metadata -->
<div class="row">
  <div class="fr-head-metadata-bar fr-head-metadata-bar-official">
    <div class="col-xs-3 col-md-3 fr-head-meta-label-holder">
      <div class="fr-head-meta-label">
        <i class="icon-fr2-calendar-alt"></i>
        <h4> <%= link_to "Current Issue (ESI)", documents_search_path(:conditions => {:publication_date => {:is => Date.current}}) %> </h4>
      </div>
    </div>
    <div class="col-xs-9 col-md-9 fr-head-meta-counts">
      <ul class="inline-list">
        <% {"NOTICE" => "Notice", "PRORULE" => "Proposed Rule", "RULE" => "Rule"}.each do |type, string_type| %>
          <li>
            <% if @doc_presenter.document_counts[type] != 0 %>
              <%= link_to @doc_presenter.document_counts[type].count.to_s + " " +
                  string_type.pluralize(@doc_presenter.document_counts[type].count),
                documents_search_path( @doc_presenter.document_counts[type].search_conditions ) %>
            <% else %>
              <%= "0 #{string_type.pluralize(0)}"  %>
            <% end %>
          </li>
        <% end %>
          <li>
            <%= link_to_unless @doc_presenter.significant_documents.count == 0,
              @doc_presenter.significant_documents.count.to_s + " " + "Significant Document".
                pluralize(@doc_presenter.significant_documents.count),
              documents_search_path(@doc_presenter.significant_documents.search_conditions) %>
          </li>

        <li><a href="" class="link">? Presidential Document</a></li>
        <li><strong>?</strong> Pages</li>
        <li class="right">
          <a href=""
            class="link public-inspection-toggle toggle"
            data-toggle-target="#pi-metadata-bar"
            data-toggle-trigger="click">
            <i class="icon-fr2 icon-fr2-clipboard public-inspection"></i>
            <span class="link-text">View Public Inspection</span>
          </a>
        </li>
      </ul>
    </div>
    <div class="clearfix"></div>
  </div>
</div>

<!-- issue public inspection metadata -->
<div id="pi-metadata-bar" class="row">
  <div class="fr-head-metadata-bar fr-head-metadata-bar-public-inspection">
    <div class="col-xs-3 col-md-3 fr-head-meta-label-holder">
      <div class="fr-head-meta-label">
        <i class="icon-fr2-clipboard"></i>
        <h4><a href="">Public Inspection</a></h4>
      </div>

      <span class="icon-fr2 icon-fr2-stop-hand"></span>
    </div>
    <div class="col-xs-9 col-md-9 fr-head-meta-counts">
      <div class="row">
        <div class="col-xs-6 col-md-6">
          <div class="description">
            <p>
              The <a href="">Public Inspection page</a> on FederalRegister.gov offers a
              preview of documents scheduled to appear in the next day's
              Federal Register issue. The Public Inspection page may also
              include documents scheduled for later issues, at the request
              of the issuing agency.
            </p>
            <p>
              <%= link_to "Learn more about public inspection here.", 'reader_aids_using_fr_path' %>
            </p>
          </div>
        </div>
        <div class="col-xs-6 col-md-6">
          <ul class="fr-list with-stats">
            <li>
              <h5>Special Filing</h5>
              <span>updated at 03:14PM, on <%= Date.today.to_s(:formal) %></span>
              <div class="public-inspection-list-stats">
                <a href="#" class="link">13 documents</a> from ? agencies
                <div>
                  <a href="#"><i class="icon-fr2 icon-fr2-notice rule_type with-tooltip-s" data-tooltip="Notices"></i>10</a>
                  <a href="#"><i class="icon-fr2 icon-fr2-proposed_rule rule_type with-tooltip-s" data-tooltip="Proposed Rules"></i>2</a>
                  <a href="#"><i class="icon-fr2 icon-fr2-rule rule_type with-tooltip-s" data-tooltip="Rules"></i>1</a>
                </div>
              </div>
            </li>
            <li>
              <h5>Regular Filing</h5>
              <span>updated at 08:45AM, on <%= Date.today.to_s(:formal) %></span>
              <div class="public-inspection-list-stats">
                <%= "#{@pi_presenter.regular_filing_count.total_count} #{'documents'.pluralize(@pi_presenter.regular_filing_count) }" %> from ? agencies
                <div>
                  <a href="#"><i class="icon-fr2 icon-fr2-notice rule_type with-tooltip-s" data-tooltip="Notices"></i>82</a>
                  <a href="#"><i class="icon-fr2 icon-fr2-proposed_rule rule_type with-tooltip-s" data-tooltip="Proposed Rules"></i>9</a>
                  <a href="#"><i class="icon-fr2 icon-fr2-rule rule_type with-tooltip-s" data-tooltip="Rules"></i>15</a>
                </div>
            </li>
          </ul>
        </div>
      </div>

    </div>

    <div class="clearfix"></div>
  </div>
</div>
