<thead>
  <tr>
    <th colspan="2"> <%= date.to_s(:month_year) %> </th>
  </tr>
</thead>

<tbody>
  <% if month_counts.empty? %>
    <tr><td>No documents</td></tr>
  <% else %>
    <% subtypes.each do |identifier, subtype| %>
      <tr>
        <% if month_counts[identifier].present? %>
          <td class="count">
            <%= month_counts[identifier].document_count %>
          </td>
          <td>
            <%= link_to subtype.pluralize(month_counts[identifier].document_count),
              documents_search_path(
                month_counts[identifier].document_count_search_conditions
              ) %>
          </td>
        <% else %>
          <td class="count">0</td>
          <td>
            <%= subtype.pluralize(0) %>
          </td>
        <% end %>
      </tr>
    <% end %>
  <% end %>
</tbody>
