<div class="title">
  <span><span class="icon-fr2 icon-fr2-Search"></span>Suggested Search</span>
</div>
<h1><%= @presenter.title %></h1>
<%= @presenter.description.html_safe %>

<p id="search-actions">
  <%= link_to "Customize this search", documents_search_path(conditions: @presenter.search_conditions), :class => "search" %>
  <%= link_to "Subscribe", new_subscription_path, :class => "search_subscription subscription" %> <!-- TODO: Ensure subscriptions are being generated with proper params. -->
</p>
<p class="section_link">
Showing 1-<%= @presenter.docs_returned_total %> of <%= link_to("#{@presenter.docs_overall_total} results",'') %> since 1994</p>
<p class="section_link">View more <%= link_to(@presenter.section,'') %> searches</p>

<%= render partial: 'document_results', locals: {documents: @presenter.documents.first(20)} %>