<div class="title">
  <span><span class="icon-fr2 icon-fr2-Search"></span>Suggested Search</span>
</div>
<h1><%= @presenter.title %></h1>
<%= @presenter.description.html_safe %>

<p id="search-actions">
  <%= link_to "Customize this search", documents_search_path(conditions: @presenter.search_conditions), :class => "search" %>
  <%= link_to "Subscribe", new_subscription_path, :class => "search_subscription subscription" %> <!-- TODO: Ensure subscriptions are being generated with proper params. -->
</p>
<p class="section_link">
Showing 1-<%= @presenter.total_docs %> of <%= link_to("X results",'') %> since 1994</p>
<p class="section_link">View more <%= link_to(@presenter.section,'') %> searches</p>
<ul id='suggested-search-list'>

<% @presenter.documents.first(20).each do |doc| %>
  <li>
  <%= suggested_search_icon_helper(doc.type) %>
  <div class="search_result_wrapper">
    <h4><%= link_to(doc.title, doc.html_url) %></h4>

    <div class="metadata">
    <%= "#{doc.type.with_indefinite_article(true)} by the #{doc.agency_names} on #{link_to(doc.publication_date,'')}".html_safe %>  <!-- TODO: Date should point to by_date path -->
    <%= link_to("PDF", doc.pdf_url) %>
    </div>
    <p class="result_info">
      <%= truncate_words(doc.abstract, :length => 350) %>
    </p>
  </div>
  </li>
<% end %>
</ul>
