<%- if subject -%>
  <%- if documents.size == 1 -%>
    <%= subject %>
    <%= documents.first.html_url %>
  <%- end -%>
<%- end -%>

<%- documents.each do |document| -%>
  <%- if document.is_a?(String) -%>
    FR Document Number: <%= document %>
  <%- else -%>
    FR Document Number: <%= document.document_number %>
    Citation: <%= document.citation %>
    PDF: <%= document.pdf_url %>
    <%= "Page".pluralize(document.pages) %>: <%= document.page_range %> (<%= pluralize(document.pages, "page") %>)
    Permalink: <%= short_document_url(document) %>
    Abstract: <%= strip_tags(
      document.shortened_abstract(total_document_count > 15 ? 250 : 500)
    ) %>
  <%- end -%>

<%- end -%>
