<!-- issue document metadata -->
<div class="row fr-head-metadata-bar fr-head-metadata-bar-official">
  <div class="<%= bootstrap_col xs: 3, md: 3 %> fr-head-meta-label-holder">
    <div class="fr-head-meta-label">
      <i class="icon-fr2-calendar-alt"></i>
      <h4>
        <%= link_to(
          home ? "Current Issue" : presenter.date,
          home ? current_document_issue_path : document_issue_path(presenter.date)
        ) %>
      </h4>
    </div>
  </div>

  <div class="<%= bootstrap_col xs: 9, md: 9 %> fr-head-meta-counts">
    <%= render partial: 'document_issues/summary_document_counts', locals: {
      presenter: presenter
    } %>
  </div>
</div>
