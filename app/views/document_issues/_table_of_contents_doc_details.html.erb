<div class='toc-documents'>
  <% documents.each do |document| %>
    <h7><%= link_to subject, document.html_url %></h7>

    <div class="row toc-document-metadata">
      <dl class="col-xs-6 col-md-6">
        <dt>FR Document:</dt>
        <dd><%= link_to document.document_number, document.html_url %></dd>

        <dt>Citation:</dt>
        <dd><%= document.citation %></dd>
      </dl>

      <dl class="col-xs-6 col-md-6">
        <dt class="toc-pdf">
          <%= link_to document.pdf_url do %>
            <%= fr_icon 'doc-pdf' %> PDF
          <% end %>
        </dt>
        <dd>
          <%= "Page".pluralize(document.pages) %> <%= document.page_range %>
          <em>(<%= pluralize(document.pages, "page") %>)</em>
        </dd>
      </dl>
    </div>
  <% end %>
</div>
