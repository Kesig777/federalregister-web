<ul class="tabs">
  <li class="<%= 'on' if selected == :documents %> search-tab documents">
    <% if selected == :documents %>
      Documents
    <% else %>
      <%= link_to documents_search_path(conditions: search.conditions) do %>
        Documents

        <span class="number_of_results">
          <%#= number_with_delimiter search.document_count %>
        </span>
      <% end %>
    <% end %>
  </li>

  <li class="<%= 'on' if selected == :public_inspection %> search-tab public-inspection">
    <% if selected == :public_inspection %>
      Public Inspection
    <% else %>
      <%= link_to public_inspection_search_path(conditions: search.conditions) do %>
        Public Inspection

        <span class="number_of_results">
          <%#= number_with_delimiter search.public_inspection_document_count %>
        </span>
      <% end %>
    <% end %>
  </li>

  <% if Settings.feature_flags.unified_agenda.search %>
    <li class="<%= 'on' if selected == :regulatory_plans %> search-tab unified-agenda">
      <% if selected == :regulatory_plans %>
        Unified Agenda Items
      <% else %>
        <%= link_to regulatory_plans_search_path(conditions: search.conditions) do %>
          Unified Agenda Items

          <span class="number_of_results">
            <%= number_with_delimiter search.regulatory_plan_count %>
          </span>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>
