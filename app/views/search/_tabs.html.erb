<ul class="tabs">
  <li class="<%= 'on' if selected == :documents %> search-tab documents">
    <% if selected == :documents %>
      Documents
    <% else %>
      <%= link_to documents_search_path(conditions: search.conditions) do %>
        Documents

        <span class="number_of_results"></span>
      <% end %>
    <% end %>
  </li>

  <li class="<%= 'on' if selected == :public_inspection %> search-tab public-inspection">
    <% if selected == :public_inspection %>
      Public Inspection
    <% else %>
      <%= link_to public_inspection_search_path(conditions: search.conditions) do %>
        Public Inspection

        <span class="number_of_results"></span>
      <% end %>
    <% end %>
  </li>
</ul>
