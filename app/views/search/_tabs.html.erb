<ul class="tabs">
  <% if selected == :entries %>
    <li class="on"><%= link_to 'Articles', entries_search_path(:conditions => {:term => search.term}) %></li>
  <% else %>
    <li><%= link_to "Articles <span class=\"number_of_results\">#{number_with_delimiter search.entry_count}</span>".html_safe, documents_search_path(:conditions => {:term => search.term}) %></li>
  <% end %>

  <% if selected == :public_inspection %>
    <li class="on"><%= link_to 'Public Inspection', public_inspection_search_path(:conditions => {:term => search.term}) %></li>
  <% else %>
    <li><%= link_to "Public Inspection <span class=\"number_of_results\">#{number_with_delimiter search.public_inspection_document_count}</span>".html_safe, public_inspection_search_path(:conditions => {:term => search.term}) %></li>
  <% end %>
  
  <% if selected == :regulatory_plans %>
    <li class="on"><%= link_to 'Unified Agenda Items', regulatory_plans_search_path(:conditions => {:term => search.term}) %></li>
  <% else %>
    <li><%= link_to "Unified Agenda Items <span class=\"number_of_results\">#{number_with_delimiter search.regulatory_plan_count}</span>".html_safe, regulatory_plans_search_path(:conditions => {:term => search.term}) %></li>
  <% end %>
</ul>

