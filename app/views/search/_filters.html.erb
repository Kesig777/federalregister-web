<div class="row">
  <div class="<%= bootstrap_col(xs: 12, md: 12) %>">
    <ul class="active-filters">
      <% filters.each do |filter| %>
        <li class="filter">
          <%= fr_icon 'filter' %>
          <span class="type"><%= filter.condition.singularize.humanize %></span>
          <span class="name"><%= filter.name %></span>

          <%= presenter.link_to_remove_search_filter filter do
            fr_icon 'badge_x'
          end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
