<%= f.inputs :class => 'show_labels' do %>

  <%# put hidden fields and stub for JS-variation here %>
  <% if js_known_to_be_enabled? %>
    <li class="string optional agency">
      <label>Agency</label>
      <input data-autocomplete="autocomplete" id="document-agency-search" placeholder="Agriculture Department"/>

      <%= f.select :agency_ids,
        @presenter.agencies.map{|a| [a.name, a.id.to_s]},
        {},
        {multiple: :multiple, class: 'selected_agency_list'} %>
    </li>
  <% else %>
    <%= f.input :agency_ids,
                :as => :select,
                :label => "Agencies",
                :include_blank => false,
                :input_html => {:multiple => true},
                :value_method => Proc.new{|a| a.id.to_s},
                :collection => @presenter.agencies,
                :wrapper_html => {:class => 'fallback_agency_list'} %>
  <% end %>

  <%= f.input :type,
              :label => "Document Category",
              :as => :check_boxes,
              :collection => DocumentType.
                document_types_for_search.
                map{|t| [t.display_type, t.granule_class]},
              :required => false %>

  <%= f.input :special_filing,
              :as => :radio,
              :label => "Filing Type",
              :collection => [['All', ''],['Regular', '0'], ['Special', '1']],
              :required => false %>

  <%= f.input :docket_id,
              :label => "Agency Docket",
              :input_html => {:placeholder => "EPA-HQ-OPPT-2005-0049"},
              :wrapper_html => {:class => 'docket'},
              :required => false %>
<% end %>

<%= f.buttons do %>
  <%= f.commit_button 'Search', button_html: {
    id: 'conditions_submit',
    class: 'fr_button primary large'
  } %>

  <li>
    <%= link_to "Clear Form", public_inspection_search_path({}),
      :class => "clear_form" %>
  </li>
<% end %>
