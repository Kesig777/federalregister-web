<%=
  summary = []
  if search_details.filters.blank?
    if citation = search_details.matching_entry_citation
      if citation.matching_fr_entries.count > 0
        summary << pluralize(citation.matching_fr_entries.count, 'matching citation')
      end
    elsif search_details.entry_with_document_number
      summary << '1 matching citation'
    end
  end
  
  summary << (search.result_metadata.count == 1 ? '1 search result' : "#{number_with_delimiter search.result_metadata.count} search results")
  
  summary.join(', ')
%>
