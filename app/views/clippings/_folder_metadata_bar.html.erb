<div id="folder_metadata_bar">
  <ul>
    <li>Clippings: <span class="clippings_on_page_count"><%= clippings.size%></span></li>
    <% if folder.created_at %>
      <li>Created on: <%= folder.created_at %></li>
    <% end %>
    <li>
      <% if folder.id.present? %>
      <%= link_to(folder_path(folder.id), :method => :delete) do
            content_tag(:span, "Delete Current Folder", :class => "icon-fr2 icon-fr2-trash_can")
          end %>
      <% end %>
    </li>
    <% if clippings.size > 0 %>
      <li class="download">
        <%= csv_download_tag('Download clippings as CSV', clippings) %>
      </li>
    <% end %>
  </ul>
</div>
