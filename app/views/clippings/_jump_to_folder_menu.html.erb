<div id="jump-to-folder">
  <div class="button">
    <span class="icon"></span>
    Go to folder
  </div>
  <div class="menu">
    <ul>
      <li data-slug="my-clippings">
        <%= link_to "My Clippings <span class='document_count'>(#{Clipping.count(:conditions => {:user_id => current_user.id, :folder_id => nil})})</span>".html_safe, clippings_path %>
      </li>
      <% folders.each do |folder| %>
        <li data-slug="<%= folder.slug %>">
        <%= link_to folder.name, folder_path(folder) %> <%= folder.clipping_count_display %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
