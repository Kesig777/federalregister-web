<%= javascript_include_tag "//unpkg.com/swagger-ui-dist@3.23.4/swagger-ui-bundle.js",
  asyc: true,
  defer: true,
  id: "swaggerUiBundle",
  nonce: content_security_policy_nonce %>

<script type="text/javascript" nonce="<%= content_security_policy_nonce %>">
  var script = document.querySelector('#swaggerUiBundle');

  script.addEventListener('load', function() {
    window.ui = SwaggerUIBundle({
      url: "/api/v1/documentation.json",
      dom_id: '#swagger-ui',
      deepLinking: true,
      presets: [
        SwaggerUIBundle.presets.apis,
        SwaggerUIBundle.SwaggerUIStandalonePreset
      ],
      plugins: [
        SwaggerUIBundle.plugins.DownloadUrl
      ]
    })
  });
</script>

<link href="<%= asset_path('swagger.css') %>", media="all",
  rel="preload stylesheet", as="style", data-turbolinks-track="true">

<% page_title 'API Documentation' %>

<% title do %>
  API Documentation
<% end %>

<div class="page-summary with-header">
  <h1>FR API Documentation</h1>

  <p>
    FederalRegister.gov provides multiple public API endpoints.
    Each endpoint is detailed below and can be explored interactively by clicking the 'Try it out' button.
    At the bottom of this page in the 'Schemas' section, valid options for various inputs such as agency names are listed in detail.
  </p>
  <p>
    FederalRegister.gov APIs do not require API keys; all you need is an HTTP client or browser.
  </p>

</div>

<div id="swagger-ui"></div>
