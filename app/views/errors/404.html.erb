<% page_title "The page you were looking for doesn't exist." %>

<%= title do %>
  404 Not Found
<% end %>

<%= bootstrap_context_wrapper do %>
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <h2>The page you were looking for doesn't exist.</h2>

      <p>You may have mistyped the address or the page may have moved.</p>

      <% content_for(:page_to_track, '/404.html') %>

      <script type="text/javascript" nonce="<%= content_security_policy_nonce %>">
        $(document).ready(function(){
          gtag('event', 'errors', {'event_action': '404', 'event_label': document.location.pathname + document.location.search + "&from=" + document.referrer})
        });
      </script>
    </div>
  </div>
<% end %>
