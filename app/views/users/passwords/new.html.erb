<% page_title "My FR Password Reset" %>

<% description t('my_fr.description') %>

<% title do %>
  <%= fr_icon 'nav_male_female_user' %>
  My FR
<% end %>

<%= render :partial => "devise/shared/tabs" %>

<div class="signup_bar">
  <%= semantic_form_for resource,
    as: resource_name,
    url: password_path(resource_name),
    authenticity_token: false,
    html: {
      method: :post,
      id: "password_reset",
      class: 'user-password-reset'
    } do |f| %>
    <%= devise_error_messages! %>

    <%= f.inputs do %>
      <%= f.input :email, :as => :email %>
    <% end %>

    <%= f.buttons do %>
      <%= f.commit_button "Send me password reset instructions" %>
    <% end %>
  <% end %>
</div>
