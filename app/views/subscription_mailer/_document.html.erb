<div style="margin-left:<%= margin_left %>">
  <h6 style="font-family:'Helvetica Neue',Arial,Helvetica,sans-serif;font-size:12px;margin: 10px 0 5px 0;">
    <%= link_to title.reject(&:blank?).join(' - '), document.short_article_url %> (<%= document.document_number %>)
  </h6>
          
  <p style="color:#7A838A;font-family:'Helvetica Neue',Arial,Helvetica,sans-serif;font-size:12px;margin: 0 0 5px 0;">
    <%= document.type.with_indefinite_article(true) %> by <%= document.agency_names_as_sentence(:links => false) %> to be published on <%= document.publication_date %>
  </p>
</div>
