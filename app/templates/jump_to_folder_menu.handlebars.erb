<div id="jump-to-folder" class="action_menu">
  <div class="button">
    <span class="icon-fr2 icon-fr2-folder"></span>
    View Items In
    <span class="icon-fr2 icon-fr2-menu_arrow"></span>
  </div>
  <div class="menu">
    <ul>
      {{#each folders}}
        <li data-slug="{{this.slug}}">
          <a href="/my/folders/{{this.slug}}">
            <span class="name">{{this.name}}</span>
            <span class="document_count">
              (<span class="document_count_inner">{{this.doc_count}}</span>)
            </span>
          </a>
        </li>
      {{/each}}
    </ul>
  </div>
</div>
