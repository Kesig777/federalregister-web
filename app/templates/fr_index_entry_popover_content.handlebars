<dl class="entry_details">
  <dt>Abstract</dt>
  <dd>
    {{#if abstract}}
      {{truncate_words abstract 50}}
    {{else}}
      Abstract not available
    {{/if}}
  </dd>

  {{#date_in_past comments_close_on }}
  <dt class="comment_open"></dt>
  <dd>Comments close on {{formatted_date comments_close_on}}</dd>
  {{/date_in_past}}

  {{#if regulations_dot_gov_info}}
  {{#with regulations_dot_gov_info}}
    {{#if comments_count}}
      <dt class="comments_received"></dt>
      <dd>{{comments_count}} public {{pluralize comments_count "comment" "comments"}} received</dd>
    {{/if}}
  {{/with}}
  {{/if}}

  {{#if significant}}
  <dt class="significant"></dt>
  <dd>Deemed Significant Under EO 12866</dd>
  {{/if}}
</dl>
