#!/bin/bash
set -ex

if [ "$PERSIST_LOGS_TO_EFS" = "true" ]; then
  HOSTNAME=`hostname`
  mkdir -p /home/app/data/efs/logs/$HOSTNAME
  chown -R app:root /home/app/data/efs/logs/$HOSTNAME

  if ! [[ -L "/home/app/log" && -d "/home/app/log" ]]; then
    rm -Rf /home/app/log
    ln -s /home/app/data/efs/logs/$HOSTNAME /home/app/log
  fi
fi